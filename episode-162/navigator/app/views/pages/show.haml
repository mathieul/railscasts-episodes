- title @page.name, false

- unless @page.children.empty?
  %ul#submenu
    - @page.children.each do |page|
      %li= link_to h(page.name), page_path(page)

%p
  - @page.ancestors.reverse.each do |page|
    = link_to h(page.name), page_path(page)
    &gt;

%h1= @page.name

= simple_format @page.content

%p
  = link_to "New Child page", new_page_path(:parent_id => @page.id)
  |
  = link_to "Edit", edit_page_path(@page)
  |
  = link_to "Destroy", @page, :confirm => "Are you sure?", :method => :delete
  |
  = link_to "View All", pages_path

