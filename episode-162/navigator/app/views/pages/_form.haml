- form_for @page do |f|
  = f.error_messages
  %p
    = f.label :parent_id
    %br
    = f.collection_select :parent_id, Page.by_name, :id, :name, :include_blank => true
  %p
    = f.label :name
    %br
    = f.text_field :name
  %p
    = f.label :content
    %br
    = f.text_area :content
  %p
    = f.submit 'Submit'
